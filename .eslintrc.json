{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "comma-dangle": ["error", {
            "arrays": "always",
            "objects": "always",
            "imports": "always",
            "exports": "always",
            "functions": "never",
            "no-tabs": "off",
            "react/prop-types": "off",
            "no-unused-vars": "off",
            "no-trailing-spaces": "off",
            "multiline-ternary": "off"
        }],
        "semi": ["error", "always"]
    }
}
